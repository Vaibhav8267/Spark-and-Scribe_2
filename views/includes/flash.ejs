<style>
    .flash-container {
    position: fixed;
    top: 20px;              /* Distance from top */
    left: 45%;
    transform: translateX(-50%);
    z-index: 9999;
    width: 80%;             /* Adjust width */
    max-width: 1000px;
    text-align: center;
}

.flash-msg {
    padding: 15px 20px;
    border-radius: 10px;
    font-size: 18px;
}

</style>
<div class="flash-container">
<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-4 flash-msg" role="alert"><%=success%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>

<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-4 flash-msg" role="alert"><%=error%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>
</div>